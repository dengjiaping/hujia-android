<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="12dp"
              android:paddingTop="13dp">

	<View
		android:id="@+id/product_describe_view1"
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:visibility="gone"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/product_describe_type"
			android:layout_width="82dp"
			android:layout_height="wrap_content"
			android:textColor="@color/person_check_order_textcolor"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/product_describe_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/main_channel_textcolor"
			android:textSize="12sp"/>
	</LinearLayout>

	<View
		android:id="@+id/product_describe_view2"
		android:layout_width="match_parent"
		android:layout_height="15dp"
		android:visibility="gone"/>
</LinearLayout>

