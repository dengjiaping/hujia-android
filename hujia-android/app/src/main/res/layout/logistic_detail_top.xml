<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg_color"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="vertical"
		android:paddingBottom="15dp"
		android:paddingLeft="12dp"
		android:paddingTop="15dp">

		<TextView
			android:id="@+id/logistic_detail_number"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/primary_color"
			android:textSize="15sp"/>

		<TextView
			android:id="@+id/logistic_detail_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="13dp"
			android:textColor="@color/primary_color"
			android:textSize="15sp"/>

		<TextView
			android:id="@+id/logistic_detail_phone"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="13dp"
			android:textColor="@color/primary_color"
			android:textSize="15sp"/>
	</LinearLayout>

	<View style="@style/person_split_match"/>

	<View style="@style/person_split_margin_top"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:paddingLeft="12dp"
		android:text="@string/logistic_detail"
		android:textColor="@color/primary_color"
		android:textSize="15sp"/>

	<View style="@style/person_split_left_right"/>
</LinearLayout>