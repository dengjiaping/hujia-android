<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/person_recharge_baozipay"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:minHeight="44dp"
	android:paddingLeft="12dp"
	android:paddingRight="13dp"
	android:visibility="visible">

	<ImageView
		android:id="@+id/pay_way_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"/>

	<TextView
		android:id="@+id/pay_way_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/pay_way_logo"
		android:paddingLeft="10dp"
		android:textColor="@color/primary_color"
		android:textSize="14sp"/>

	<TextView
		android:id="@+id/pay_way_introduce"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5dp"
		android:layout_toRightOf="@+id/pay_way_text"
		android:textColor="@color/primary_color"
		android:textSize="11sp"/>

	<RadioButton
		android:id="@+id/pay_way_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:button="@drawable/person_shopcar_select_all"
		android:checked="false"
		android:clickable="false"
		android:focusable="false"/>
</RelativeLayout>