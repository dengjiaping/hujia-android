<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:background="@color/white"
              android:gravity="center_vertical">

	<ImageView
		android:id="@+id/home_search_back"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:paddingStart="15dp"
		android:paddingEnd="15dp"
		android:src="@drawable/ic_back"/>

	<EditText
		android:id="@+id/home_search_edit"
		android:layout_width="0dp"
		android:layout_height="28dp"
		android:layout_weight="1"
		android:background="@drawable/home_search_act_title_bg"
		android:drawableStart="@drawable/search_search_icon"
		android:paddingStart="7dp"
		android:paddingEnd="0dp"
		android:drawablePadding="5dp"
		android:hint="@string/search_input_hint"
		android:textSize="14sp"
		android:inputType="text"
		android:imeOptions="actionSearch"
		android:textCursorDrawable="@drawable/search_input_cursor_color"
		android:textColorHint="@color/home_more_textcolor"
		android:textColor="@color/primary_color"/>

	<TextView
		android:id="@+id/home_search_start"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:paddingStart="15dp"
		android:paddingEnd="15dp"
		android:gravity="center"
		android:text="@string/search"
		android:textSize="15sp"
		android:textColor="@color/main_channel_textcolor"/>

</LinearLayout>