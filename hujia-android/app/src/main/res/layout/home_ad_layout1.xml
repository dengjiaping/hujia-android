<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="160dp"
              android:divider="@drawable/horizontal_splitline"
              android:orientation="vertical"
              android:showDividers="middle">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:divider="@drawable/vertical_splitline"
		android:orientation="horizontal"
		android:showDividers="middle">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/sdv_home_ad1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			fresco:actualImageScaleType="fitCenter"
			fresco:failureImage="@drawable/default_banner_bg"
			fresco:placeholderImage="@drawable/default_banner_bg"/>

		<View style="@style/vertical_split_line"/>

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/sdv_home_ad2"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			fresco:actualImageScaleType="fitCenter"
			fresco:failureImage="@drawable/default_banner_bg"
			fresco:placeholderImage="@drawable/default_banner_bg"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:divider="@drawable/vertical_splitline"
		android:orientation="horizontal"
		android:showDividers="middle">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/sdv_home_ad3"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			fresco:actualImageScaleType="fitCenter"
			fresco:failureImage="@drawable/default_banner_bg"
			fresco:placeholderImage="@drawable/default_banner_bg"/>

		<View style="@style/vertical_split_line"/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="horizontal">

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/sdv_home_ad4"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				fresco:actualImageScaleType="fitCenter"
				fresco:failureImage="@drawable/default_banner_bg"
				fresco:placeholderImage="@drawable/default_banner_bg"/>

			<View style="@style/vertical_split_line"/>

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/sdv_home_ad5"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				fresco:actualImageScaleType="fitCenter"
				fresco:failureImage="@drawable/default_banner_bg"
				fresco:placeholderImage="@drawable/default_banner_bg"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>