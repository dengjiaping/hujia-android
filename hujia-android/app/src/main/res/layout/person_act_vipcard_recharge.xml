<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:text="余额：￥8888"
		android:textColor="@color/primary_color"
		android:textSize="30sp"/>

	<View style="@style/person_split_left_right"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:text="请选择充值金额"
		android:textColor="@color/primary_color"
		android:textSize="14sp"/>

	<com.common.view.GridViewForInner
		android:id="@+id/vipcard_charge_grid"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:horizontalSpacing="10dp"
		android:minHeight="64dp"
		android:numColumns="3"
		android:paddingBottom="20dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:verticalSpacing="10dp"/>

	<View style="@style/person_split_match"/>

	<View style="@style/person_split_margin_top"/>

	<include layout="@layout/pay_choose_way"/>

	<View style="@style/person_split_match"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<TextView
		android:id="@+id/vipcard_charge_pay"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_gravity="bottom"
		android:layout_marginBottom="20dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@drawable/ic_button"
		android:gravity="center"
		android:text="立即支付"
		android:textColor="@drawable/ic_button_text"/>
</LinearLayout>