<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg_color"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="13sp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:paddingTop="13dp"
		android:background="@color/white">

		<TextView
			android:id="@+id/refund_detail_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/primary_color"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/refund_detail_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:textSize="12sp"
			android:textColor="@color/primary_color_red"/>

		<TextView
			android:id="@+id/refund_detail_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/refund_detail_number"
			android:layout_marginTop="8dp"
			android:textSize="12sp"
			android:textColor="@color/person_check_order_textcolor"/>
	</RelativeLayout>


	<View style="@style/person_split_match"/>

	<ListView
		android:id="@+id/refund_detail_list"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:dividerHeight="10dp"
		android:layout_marginTop="10dp"
		android:divider="@null"/>

	<TextView
		android:id="@+id/refund_detail_to_edit"
		android:layout_width="match_parent"
		android:layout_height="49dp"
		android:background="@color/primary_color_red"
		android:gravity="center"
		android:text="@string/input_courier_number"
		android:textColor="@color/white"
		android:textSize="16sp"
		android:visibility="gone"/>
</LinearLayout>