<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/base_titlebar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical">

	<ImageView
		android:id="@+id/left_button"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:paddingLeft="15dp"
		android:src="@drawable/ic_back"/>

	<TextView
		android:id="@+id/toolbar_left_title"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/comment_marginleft"
		android:layout_marginRight="50dp"
		android:layout_toRightOf="@id/left_button"
		android:ellipsize="end"
		android:gravity="center"
		android:singleLine="true"
		android:textColor="@color/primary_color"
		android:textSize="@dimen/font_size_a"/>

	<ImageView
		android:id="@+id/right_button2"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:paddingLeft="8dp"
		android:paddingRight="@dimen/title_marginright"
		android:src="@drawable/ic_share"
		android:visibility="visible"/>

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_toLeftOf="@+id/right_button2">

		<ImageView
			android:id="@+id/right_button1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerVertical="true"
			android:paddingLeft="@dimen/title_marginright"
			android:paddingRight="@dimen/title_marginright"
			android:src="@drawable/product_detail_shopcar"
			android:visibility="visible"/>

		<TextView
			android:id="@+id/right_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:paddingLeft="3.5dp"
			android:paddingRight="3.5dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:textSize="10sp"
			android:textColor="@color/white"
			android:visibility="gone"
			android:background="@drawable/shape_circle_red"/>
	</FrameLayout>

	<View
		style="@style/person_split_match"
		android:layout_alignParentBottom="true"/>

</RelativeLayout>