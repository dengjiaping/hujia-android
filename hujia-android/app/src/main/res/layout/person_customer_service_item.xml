<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

	<View style="@style/person_split_match"/>

	<include layout="@layout/person_order_item_title"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="15dp"
		android:paddingLeft="12dp">

		<include layout="@layout/person_order_cloth_detail"/>
	</LinearLayout>

	<View style="@style/person_split_left_right"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:gravity="center_vertical"
		android:paddingEnd="12dp"
		android:paddingStart="12dp">

		<TextView
			android:id="@+id/refundapply_item_time_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/person_check_order_textcolor"
			android:textSize="12sp"
			android:text="申请时间"/>

		<TextView
			android:id="@+id/refundapply_item_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/refundapply_item_time_info"
			android:layout_marginTop="4dp"
			android:textColor="@color/primary_color"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/order_item_progress_query"
			android:layout_width="75dp"
			android:layout_height="28dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@drawable/person_order_button_bg"
			android:gravity="center"
			android:text="进度查询"
			android:textColor="@color/primary_color"
			android:textSize="13sp"/>
	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="10dp"
		android:background="@color/common_bg_color"/>
</LinearLayout>