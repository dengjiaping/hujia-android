<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/home_brand_item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp">

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/torefund_photo_item_img"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_gravity="center"
		android:layout_marginTop="5dp"
		android:background="@drawable/person_order_cloth_bg"
		android:padding="1dp"
		fresco:actualImageScaleType="fitCenter"
		fresco:failureImage="@drawable/torefund_photo_add_icon"
		fresco:placeholderImage="@drawable/torefund_photo_add_icon"/>

	<ImageView
		android:id="@+id/torefund_photo_item_delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:paddingBottom="10dp"
		android:paddingLeft="48dp"
		android:src="@drawable/person_collection_close"
		android:visibility="visible"/>
</RelativeLayout>