<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_other_store_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_other_store_cover"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@color/common_spilt_line"
            app:actualImageScaleType="fitCenter"
            app:failureImage="@drawable/default_banner_bg"
            app:placeholderImage="@drawable/default_banner_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_other_store_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:actualImageScaleType="fitCenter"
                app:failureImage="@drawable/default_product_bg"
                app:placeholderImage="@drawable/default_product_bg" />

            <TextView
                android:id="@+id/tv_other_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/sdv_other_store_logo"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:textColor="@color/primary_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_other_store_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_other_store_name"
                android:layout_toEndOf="@id/sdv_other_store_logo"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/person_check_order_textcolor"
                android:textSize="12sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_red_round_15"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/primary_color_red"
                android:textSize="13sp"
                android:text="@string/store_goto_see"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>